<!-- BUILD -->
<gap:platform name="ios" />
<gap:platform name="android" />
<!-- //BUILD -->

<!-- ACCESS -->
<access origin="http://127.0.0.1*"/>
<!-- //ACCESS -->

<!-- SPLASH -->
<gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
