<?xml version="1.0" encoding="UTF-8" ?>
<widget 

    xmlns        = "http://www.w3.org/ns/widgets"
    xmlns:gap    = "http://phonegap.com/ns/1.0"
    id           = "com.seefeld.daysleft"
    versionCode  = "1" 
    version      = "1.0"
    >

    <name>Days Left</name>
    <description>Show you count of the days till very important event. You can add your own event.</description>
    <author href="webiq.io" email="piotr.seefeld@gmail.com">Piotr Seefeld</author>

    <icon src="icon.png" />

